<?xml version="1.0" encoding="utf-8"?>
<!-- item_complaint.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

    <TextView
            android:text="  "
            android:layout_width="405dp"
            android:layout_height="730dp"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_300sdp"
            android:background="@drawable/panes"
            android:layout_height="@dimen/_540sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout7"
            app:layout_constraintHorizontal_bias="0.476"
            android:layout_marginTop="12dp">


        <ImageView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_260sdp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/dogimage"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.479" />

        <TextView
                android:text="Phone num:"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/dogimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/phonenum"
                android:layout_marginTop="32dp"
                app:layout_constraintHorizontal_bias="0.185" />

        <TextView
                android:text="Pet owner:"
                android:textColor="@color/black"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/dogdetails31"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dogdetails3"
                app:layout_constraintEnd_toStartOf="@+id/dogowner"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp" />

        <TextView
                android:text="Description:"
                android:textColor="@color/black"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/dogdetails"
                app:layout_constraintTop_toBottomOf="@+id/dogdetails31"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/description"
                app:layout_constraintHorizontal_bias="0.185" />

        <TextView
                android:text="Email:
"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:id="@+id/dogdetails3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/phonenum"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintHorizontal_bias="0.196" />

        <TextView
                android:text="Dog Name"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/phonenum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogimage"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="12dp" />

        <TextView
                android:text="Dog Name"
                android:textColor="@color/black"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/phonenum"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp" />

        <TextView
                android:text="Dog Name"
                android:textColor="@color/black"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogowner"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp" />

        <EditText
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_35sdp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:id="@+id/description"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/dogowner"
                android:layout_marginEnd="12dp" />

        <Button
                android:text="Done Report"
                android:background="@drawable/button"
                android:textColor="#0C690B"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/reportbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
