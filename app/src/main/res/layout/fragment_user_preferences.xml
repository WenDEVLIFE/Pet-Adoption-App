<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdoptionFragments"
        android:background="@drawable/background_gradient"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="@color/white"
                android:id="@+id/textView31"
                android:text="Name"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Name_display"
                app:layout_constraintBottom_toTopOf="@+id/textView312"
                app:layout_constraintHorizontal_bias="0.83"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                app:layout_constraintVertical_bias="0.629" />

        <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="@color/white"
                android:id="@+id/textView312"
                android:text="Username"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/username_display"
                app:layout_constraintBottom_toTopOf="@+id/change_userbutton"
                app:layout_constraintHorizontal_bias="0.689"
                android:layout_marginBottom="52dp" />

        <TextView
                android:layout_width="193dp"
                android:layout_height="34dp"
                android:textColor="@color/white"
                android:id="@+id/Name_display"
                android:text="Name"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="28dp"
                app:layout_constraintBottom_toTopOf="@+id/username_display"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                app:layout_constraintVertical_bias="0.666" />

        <TextView
                android:layout_width="194dp"
                android:layout_height="32dp"
                android:textColor="@color/white"
                android:id="@+id/username_display"
                android:text="Name"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintBottom_toTopOf="@+id/change_userbutton"
                android:layout_marginBottom="52dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="28dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_310sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/panes2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout3">

            <ImageButton
                    android:src="?attr/homeAsUpIndicator"
                    android:layout_width="60dp"
                    android:layout_height="56dp"
                    android:id="@+id/buttonnback"
                    app:tint="@drawable/buttontint"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toStartOf="@+id/textVie1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.432"
                    app:layout_constraintVertical_bias="0.516" />

            <TextView
                    android:layout_width="305dp"
                    android:layout_height="55dp"
                    android:textColor="@color/white"
                    android:id="@+id/textVie1"
                    android:text="User Preferences"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/_30sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.548"
                    android:layout_marginEnd="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_155sdp"
                android:background="@drawable/profile_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                android:layout_marginTop="40dp"
                android:id="@+id/constraintLayout6">

            <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@drawable/user_icon"
                    android:id="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.444" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:text="Change Username"
                android:layout_width="@dimen/_175sdp"
                android:layout_height="@dimen/_45sdp"
                android:textColor="#0C690B"
                android:id="@+id/change_userbutton"
                android:background="@drawable/button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintBottom_toTopOf="@+id/change_passwordbutton"
                android:layout_marginBottom="20dp" />

        <Button
                android:text="Change Password"
                android:layout_width="@dimen/_175sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/change_passwordbutton"
                android:textColor="#0C690B"
                android:background="@drawable/button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.457"
                app:layout_constraintBottom_toTopOf="@+id/change_emailbutton"
                android:layout_marginBottom="12dp" />

        <Button
                android:text="Change Email"
                android:layout_width="@dimen/_175sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/change_emailbutton"
                android:textColor="#0C690B"
                android:background="@drawable/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                android:layout_marginBottom="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>