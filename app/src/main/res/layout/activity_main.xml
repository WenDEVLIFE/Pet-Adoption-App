<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Cool_gray"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="@dimen/_239sdp"
            android:layout_height="@dimen/_50sdp"
            android:inputType="text"
            android:hint="Username"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/textfield"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            android:layout_marginTop="28dp" />

    <EditText
            android:layout_width="@dimen/_239sdp"
            android:layout_height="@dimen/_50sdp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/textfield"
            android:ems="10"
            android:id="@+id/password"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="20dp" />

    <Button
            android:text="Sign in"
            android:layout_width="218dp"
            android:layout_height="65dp"
            android:id="@+id/button"
            android:textColor="@color/white"
            android:background="@drawable/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sigin" />

    <CheckBox
            android:text="Check to see the password"
            android:layout_width="279dp"
            android:layout_height="39dp"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginBottom="12dp"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintVertical_bias="0.272" />

    <TextView
            android:text="Don't have account? Sign Up"
            android:layout_width="@dimen/_204sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_height="48dp"
            android:textColor="@color/black"
            android:id="@+id/sigin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            app:layout_constraintHorizontal_bias="0.506" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/toplogin_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            android:id="@+id/constraintLayout2">

        <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_100sdp"
                app:srcCompat="@drawable/petlogo"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.502" />

        <TextView
                android:text="Adopt, Don't Shop"
                android:textAlignment="center"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.589"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>