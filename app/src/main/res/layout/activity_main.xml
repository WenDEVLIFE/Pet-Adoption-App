<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Cool_gray"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="@dimen/_239sdp"
            android:layout_height="@dimen/_50sdp"
            android:inputType="text"
            android:hint="Username"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/textfield"
            android:ems="10"
            android:id="@+id/username"
            tools:layout_editor_absoluteX="49dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            android:layout_marginTop="16dp" />

    <EditText
            android:layout_width="@dimen/_239sdp"
            android:layout_height="@dimen/_50sdp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/textfield"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="28dp" />

    <Button
            android:text="Sign Up"
            android:layout_width="218dp"
            android:layout_height="65dp"
            android:id="@+id/button"
            android:textColor="@color/white"
            android:background="@drawable/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/sigin" />

    <CheckBox
            android:text="Check to see the password"
            android:layout_width="@dimen/_215sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginBottom="28dp"
            app:layout_constraintHorizontal_bias="0.381" />

    <TextView
            android:text="Don't have account? Sign Up"
            android:layout_width="@dimen/_204sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_height="48dp"
            android:textColor="@color/black"
            android:id="@+id/sigin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            android:layout_marginBottom="112dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/toplogin_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/constraintLayout2">

        <ImageView
                android:layout_width="87dp"
                android:layout_height="83dp"
                app:srcCompat="@drawable/shiba"
                android:id="@+id/imageView"
                tools:layout_editor_absoluteY="17dp"
                tools:layout_editor_absoluteX="149dp" />

        <TextView
                android:text="Adopt, Don't Shop"
                android:layout_width="@dimen/_199sdp"
                android:textFontWeight="@integer/material_motion_duration_long_1"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="sans-serif-condensed"
                tools:layout_editor_absoluteY="98dp"
                tools:layout_editor_absoluteX="127dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>