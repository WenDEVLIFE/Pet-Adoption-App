<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdoptionFragments"
        android:background="@drawable/background_gradient"
        >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_270sdp"
                android:background="@drawable/panes"
                android:id="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/viewPager2"
                app:layout_constraintHorizontal_bias="0.476"
                android:layout_marginBottom="32dp">

            <ImageButton
                    android:src="@drawable/file"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/imageButton_pending"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView44"
                    android:layout_marginEnd="36dp"
                    app:layout_constraintVertical_bias="0.718" />

            <ImageButton
                    android:src="@drawable/missing"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/missing_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/donatebutton"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintHorizontal_bias="0.494"
                    android:layout_marginBottom="16dp" />

            <ImageButton
                    android:src="@drawable/donation"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:id="@+id/donatebutton"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView41"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="172dp" />

            <ImageButton
                    android:src="@drawable/footprint"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:id="@+id/buttonadopt"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@+id/textView45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_adopt_pet"
                    app:layout_constraintHorizontal_bias="0.427"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.96" />

            <ImageButton
                    android:src="@drawable/pawprint"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/button_adopt_pet"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView43"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton_pending"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintVertical_bias="0.765" />

            <TextView
                    android:text="Your adoption pets"
                    android:layout_width="81dp"
                    android:layout_height="37dp"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/textView45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView43"
                    app:layout_constraintBottom_toTopOf="@+id/missing_button"
                    app:layout_constraintHorizontal_bias="0.478"
                    android:layout_marginBottom="28dp" />

            <TextView
                    android:text="Your missing pet"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView41"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.483"
                    android:layout_marginBottom="48dp" />

            <TextView
                    android:text="Donate "
                    android:layout_width="60dp"
                    android:layout_height="29dp"
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/textView41"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="172dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="56dp" />

            <TextView
                    android:text="Adopted pets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/textView43"
                    app:layout_constraintEnd_toStartOf="@+id/textView44"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/donatebutton"
                    android:layout_marginBottom="40dp" />

            <TextView
                    android:text="Pending adoptions"
                    android:layout_width="73dp"
                    android:layout_height="38dp"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/textView44"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="36dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="184dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_width="@dimen/_201sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Welcome"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/_20sdp"
                android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="64dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintVertical_bias="0.0" />

        <ImageView
                android:src="@drawable/pet"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.47" />

        <androidx.viewpager2.widget.ViewPager2
                android:layout_width="357dp"
                android:layout_height="203dp"
                android:id="@+id/viewPager2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.703"
                android:layout_marginBottom="52dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>