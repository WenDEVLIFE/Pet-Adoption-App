<?xml version="1.0" encoding="utf-8"?>
<!-- item_complaint.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/panes"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="-57dp">


        <ImageView
                android:layout_width="115dp"
                android:layout_height="111dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/dogimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:text="Pet Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/dogimage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp" />

        <TextView
                android:text="Pet Owner:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogdetails31"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dogdetails3"
                app:layout_constraintEnd_toStartOf="@+id/dogowner"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp" />

        <TextView
                android:text="Descriptions:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogdetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogdetails31"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.062" />

        <TextView
                android:text="Pet Breed:
"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogdetails3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dogbreed"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintHorizontal_bias="0.695" />

        <TextView
                android:text="Dog Name"
                android:layout_width="239dp"
                android:layout_height="30dp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogimage"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp" />

        <TextView
                android:text="Dog Name"
                android:layout_width="241dp"
                android:layout_height="33dp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogbreed"
                app:layout_constraintTop_toBottomOf="@+id/dogname"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp" />

        <TextView
                android:text="Dog Name"
                android:layout_width="242dp"
                android:layout_height="29dp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/dogowner"
                app:layout_constraintTop_toBottomOf="@+id/dogbreed"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp" />

        <EditText
                android:layout_width="370dp"
                android:layout_height="47dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogdetails"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_bias="0.39" />

        <Button
                android:text="Adopt"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:layout_width="205dp"
                android:layout_height="55dp"
                android:id="@+id/button2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
