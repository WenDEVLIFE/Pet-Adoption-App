<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color, shape etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="#6A994E" />
        </shape>
    </item>

    <!-- Define the progress properties like gradient color, shape etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="50dp" />
                <gradient
                        android:startColor="#6A994E"
                        android:endColor="#6A994E"
                        android:angle="0"/>
            </shape>
        </clip>
    </item>

</layer-list>